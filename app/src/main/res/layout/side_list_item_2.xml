<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_navigation_sub_menu_selector"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_row_image"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/side_bullet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/list_row_child_txt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/sbc_header_text"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/list_row_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>